{
  "name": "speech-therapy-ai",
  "version": "1.0.0",
  "description": "AI-powered speech therapy system with Whisper STT, IPA conversion, and TTS feedback",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc",
    "build:frontend": "npm run build:css && npm run build:js",
    "build:css": "cleancss -o ../frontend/css/boardgame.min.css ../frontend/css/boardgame.css",
    "build:js": "mkdir -p ../frontend/scripts/dist && terser ../frontend/scripts/handlers/*.js -o ../frontend/scripts/dist/handlers.min.js --compress --mangle",
    "build:all": "npm run build && npm run build:frontend",
    "start": "node dist/api/server.js",
    "dev": "cross-env NODE_OPTIONS=--no-deprecation ts-node src/index.ts",
    "dev:server": "ts-node src/api/server.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "lint": "eslint src tests --ext .ts",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "type-check": "tsc --noEmit"
  },
  "keywords": [
    "speech-therapy",
    "ipa",
    "whisper",
    "tts",
    "phonetics"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.6.0",
    "bcrypt": "^6.0.0",
    "better-sqlite3": "^12.5.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "form-data": "^4.0.0",
    "handlebars": "^4.7.8",
    "jsonwebtoken": "^9.0.3",
    "microsoft-cognitiveservices-speech-sdk": "^1.46.0",
    "multer": "^2.0.2",
    "openai": "^4.20.0",
    "pdf-to-img": "^5.0.0",
    "puppeteer": "^24.33.0",
    "winston": "^3.18.3"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/better-sqlite3": "^7.6.13",
    "@types/express": "^4.17.21",
    "@types/handlebars": "^4.0.40",
    "@types/jest": "^29.5.8",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/multer": "^2.0.0",
    "@types/node": "^20.9.0",
    "@types/supertest": "^2.0.16",
    "@typescript-eslint/eslint-plugin": "^6.10.0",
    "@typescript-eslint/parser": "^6.10.0",
    "clean-css-cli": "^5.6.3",
    "cross-env": "^10.1.0",
    "eslint": "^8.53.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "jest": "^29.7.0",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "terser": "^5.31.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "typescript": "^5.2.2"
  }
}
